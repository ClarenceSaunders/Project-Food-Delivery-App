


import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import matplotlib.pyplot as plt


df = pd.read_csv('food_order.csv')





df['rating'] = pd.to_numeric(df['rating'], errors = 'coerce')


df[df['rating'].isnull()]


df['rating'].fillna(df['rating'].mean(), inplace = True)


df['rating'].dtype


total_orders = df['order_id'].nunique()
total_customers = df['customer_id'].nunique()
avg_order_value = df['cost_of_the_order'].mean()
#convert to numeric
avg_rating = df['rating'].mean()
avg_prep_time = df['food_preparation_time'].mean()
avg_delivery_time = df['delivery_time'].mean()

print('Total Orders:', total_orders)
print('Total Customers:', total_customers)
print('Average Order Value:', round(avg_order_value,2))
print('Average Rating:', round(avg_rating,2))
print('Average Prep Time:', round(avg_prep_time,2))
print('Average Delivery Time:', round(avg_delivery_time,2))





restaurant_revenue = df.groupby('restaurant_name')['cost_of_the_order'].sum().sort_values(ascending = False).head(10)
plt.figure()
restaurant_revenue.plot(kind = 'bar')
plt.title('Top 10 Restaurants by Revenue')
plt.ylabel('Total Revenue')
plt.xticks(rotation = 45)
plt.show()





cuisine_orders = df['cuisine_type'].value_counts()

plt.figure()
cuisine_orders.plot(kind = 'bar')
plt.title('Orders by Cuisine Type')
plt.ylabel('Number of Orders')
plt.xticks(rotation = 45)
plt.show()





orders_by_day = df['day_of_the_week'].value_counts()

plt.figure()
orders_by_day.plot(kind = 'bar')
plt.title('Orders by Day of Week')
plt.ylabel('Number of Orders')
plt.xticks(rotation = 45)
plt.show()





plt.figure()
plt.scatter(df['delivery_time'], df['rating'])
plt.title('Delivery Time vs Rating')
plt.xlabel('Delivery Time')
plt.ylabel('Rating')
plt.xticks(rotation = 45)
plt.show()


def executive_summary(df):
    return f"""
    Total Orders: {df['order_id'].nunique()}
    Average Order Value: ${df['cost_of_the_order'].mean():.2f}
    Average Rating:{df['rating'].mean():.2f}
    Average Prep Time:{df['food_preparation_time'].mean():1f} minutes
    Average Delivery Time: {df['delivery_time'].mean():.1f} minutes

    Insight:
    Longer delivery times are likely to negatively impact customer satisfaction,
    suggesting optimization opportunities in logistics and kitchen operations.
    """


print(executive_summary(df))



